{
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es6",
		"skipLibCheck": true,
		"jsx": "react"
	}
}
